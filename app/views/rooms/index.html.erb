

<h1>Listing Rooms</h1>

<table>
  <thead>
    <tr>
      <th>Topic</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <form class="form-signin">
    <% @rooms.each do |room| %>
      <tr>
        <td><%= room.topic %></td>
        <td><button class="btn btn-sm btn-primary btn-block" type="submit"><%= link_to 'Show', room, :style => 'color:#FFFFFF;'  %></button></td>
        <td><button class="btn btn-sm btn-primary btn-block" type="submit"><%= link_to 'Edit', edit_room_path(room), :style => 'color:#FFFFFF;'  %></button></td>
        <td><button class="btn btn-sm btn-primary btn-block" type="submit"><%= link_to 'Destroy', room, method: :delete, data: { confirm: 'Are you sure?'}, :style => 'color:#FFFFFF;' %></button></td>
    <% end %>
    </form>
  </tbody>
  
</table>

<br>

<%= link_to 'New Room', new_room_path %>
   
  <form class="form-signin">
        <h2 class="form-signin-heading">Room Listing</h2>
        <label for="inputEmail" class="sr-only">Email address</label>
        <input type="email" id="inputEmail" class="form-control" placeholder="Email address" required autofocus>
        <label for="inputPassword" class="sr-only">Password</label>
        <input type="password" id="inputPassword" class="form-control" placeholder="Password" required>
        <div class="checkbox">
          <label>
            <input type="checkbox" value="remember-me"> Remember me
          </label>
        </div>
        <button class="btn btn-lg btn-primary btn-block" type="submit">Testing</button>
      </form>

