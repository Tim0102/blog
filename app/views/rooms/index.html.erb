
<div class="col-md-4">
<h1>Listing Rooms</h1>

<table>
  <thead>
    <tr>
      <th>Topic</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>

    <form class="form-signin">
     <% @rooms.each do |room| %>
      <tr>
        <td><%= room.topic %></td>

        <td><%= link_to 'Show', room, class: 'btn btn-primary btn-xs' %></td>

        <td><%= link_to 'Edit', edit_room_path(room), class: 'btn btn-info btn-xs' %>
        </td>

        <td><%= link_to 'Destroy', room, method: :delete, data: { confirm: 'Are you sure?'}, class: 'btn btn-danger btn-xs' %></td>
        </tr>
      <% end %>
    </form>
  </tbody>
  
</table>

<br>

<%= link_to new_room_path, class: 'btn btn-success' do %>
  <i class="glyphicon glyphicon-plus"></i> Add Room
<% end %>
</div>
